<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Bottom sheet style -->

    <style name="AlmaTheme.BottomSheetDialog.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.RoundedBottomSheet
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.RoundedBottomSheet" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <!-- Material dialog -->

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Custom Material Dialog with color positive button -->

    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Bg.Primary</item>
    </style>

    <style name="Alert.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Bg" />

    <style name="Alert.Button.Bg.Primary">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorOnPrimary</item>
    </style>

    <!--<style name="Alert.Button.Bg.Transparent">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorOnPrimary</item>
    </style>-->

</resources>