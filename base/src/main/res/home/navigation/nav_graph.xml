<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/timer_list_screen">
    <fragment
        android:id="@id/timer_list_screen"
        android:name="fr.bowser.behaviortracker.timer_list_view.TimerFragment"
        android:label="fragment_metronome"
        tools:layout="@layout/fragment_timer">
        <action
            android:id="@+id/action_timer_list_screen_to_show_mode_screen"
            app:destination="@id/show_mode_screen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
        <action
            android:id="@+id/action_timer_list_screen_to_rewards_screen"
            app:destination="@id/rewards_screen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
        <action
            android:id="@+id/action_timer_list_screen_to_settings_screen"
            app:destination="@id/settings_screen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
        <action
            android:id="@+id/action_timer_list_screen_to_explain_permission_request"
            app:destination="@id/explain_permission_request"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@id/pomodoro_screen"
        android:name="fr.bowser.behaviortracker.pomodoro_view.PomodoroFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_pomodoro">
        <action
            android:id="@+id/action_pomodoro_screen_to_settings_screen"
            app:destination="@id/settings_screen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/show_mode_screen"
        android:name="fr.bowser.behaviortracker.show_mode_view.ShowModeFragment"
        android:label="ShowModeFragment"
        tools:layout="@layout/fragment_show_mode">
        <argument
            android:name="selectedTimerId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/rewards_screen"
        android:name="fr.bowser.behaviortracker.rewards_view.RewardsFragment"
        android:label="RewardsFragment"
        tools:layout="@layout/fragment_rewards" />
    <fragment
        android:id="@+id/settings_screen"
        android:name="fr.bowser.behaviortracker.setting_view.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/explain_permission_request"
        android:name="fr.bowser.behaviortracker.explain_permission_request.ExplainPermissionRequestFragment"
        android:label="ExplainPermissionRequestFragment"
        tools:layout="@layout/fragment_explain_permission_request">
        <argument
            android:name="explainPermissionRequestModel"
            app:argType="fr.bowser.behaviortracker.explain_permission_request.ExplainPermissionRequestModel" />
    </fragment>
</navigation>