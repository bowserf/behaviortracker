<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="@string/pref_key_timer_category"
        android:title="@string/settings_category_timer">

        <fr.bowser.behaviortracker.setting.TimeModificationDialogPreference
            android:dialogMessage="@string/settings_cell_time_modification_message"
            android:key="@string/pref_key_time_modification"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:summary="@string/settings_cell_time_modification_message"
            android:defaultValue="@integer/settings_default_value_time_modification"
            android:title="@string/settings_cell_time_modification_title" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/pref_key_one_active_timer"
            android:summary="@string/settings_cell_one_active_message"
            android:title="@string/settings_cell_one_active_timer" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/pref_key_pomodoro"
        android:title="@string/settings_category_pomodoro">

        <fr.bowser.behaviortracker.setting.TimeModificationDialogPreference
            android:dialogMessage="@string/settings_cell_pomodoro_stage_message"
            android:key="@string/pref_key_pomodoro_stage"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:defaultValue="@integer/settings_default_value_pomodoro_stage"
            android:summary="@string/settings_cell_pomodoro_stage_message"
            android:title="@string/settings_cell_pomodoro_stage_title" />

        <fr.bowser.behaviortracker.setting.TimeModificationDialogPreference
            android:dialogMessage="@string/settings_cell_pomodoro_pause_stage_message"
            android:key="@string/pref_key_pomodoro_pause_stage"
            android:negativeButtonText="@android:string/cancel"
            android:positiveButtonText="@android:string/ok"
            android:defaultValue="@integer/settings_default_value_pomodoro_pause_stage"
            android:summary="@string/settings_cell_pomodoro_pause_stage_message"
            android:title="@string/settings_cell_pomodoro_pause_stage_title" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_key_pomodoro_vibration"
            android:summary="@string/settings_cell_pomodoro_vibration_message"
            android:title="@string/settings_cell_pomodoro_vibration" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/pref_key_timer_other"
        android:title="@string/settings_category_other">

        <Preference android:key="@string/pref_key_send_commentary"
            android:title="@string/settings_cell_send_commentary_title"
            android:summary="@string/settings_cell_send_commentary_message"/>

    </PreferenceCategory>

</PreferenceScreen>